#include <fstream>
#include <iostream>
#include <string>
#include <vector>
#include <stdlib.h>
using namespace std;

struct Warrior {
  string name;
  int strength;
};

void printFile( istream& file ) {
	/* Prints a file's text onto the screen, line by line. */
	string line;
	while( getline( file, line ) ) {
		cout << line << endl;
	}
	file.clear();
	file.seekg(0);
}

