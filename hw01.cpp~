}

int main() {
  string word;
  vector<Warrior> fighters;
  
  ifstream warriors( "warriors.txt" );
  if( !warriors ) {
    cerr << "Could not open the file." << endl;
    exit(1);
  }
  printFile( warriors );
  while( warriors >> word ) {
    if( word.compare( "Warrior" ) ) {
      addWarrior( fighters, warriors );
    }
  }
  ofstream output( "output.txt" );
  warriors.close();
  output.close();
}
